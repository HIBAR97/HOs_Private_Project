<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Frg_myrecipe3_TV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="선택"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe3_Spinner"
        android:layout_below="@+id/Frg_myrecipe3_TV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="추천생수"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="분쇄도"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="로스팅 정도"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="생산년도"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe3_TV2"
        android:layout_below="@+id/Frg_myrecipe3_Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레시피 이름"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe3_ET1"
        android:layout_below="@+id/Frg_myrecipe3_TV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="내용을 입력해 주세요"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe3_TV3"
        android:layout_below="@+id/Frg_myrecipe3_ET1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="설명"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe3_ET2"
        android:layout_below="@+id/Frg_myrecipe3_TV3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내용을 입력해주세요"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe3_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Frg_myrecipe3_ET2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Frg_myrecipe3_Prev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="Prev" />


        <Button
            android:id="@+id/Frg_myrecipe3_Next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="next" />

    </LinearLayout>




</RelativeLayout>