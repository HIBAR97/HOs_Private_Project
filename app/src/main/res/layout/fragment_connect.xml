<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Frg_Connect_Text"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="현재 App에 연결 된 기기"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_Connect_List"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Frg_Connect_Text">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_Connect_Text2"
        android:layout_width="match_parent"
        android:layout_height="600dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="어디서나 기기 제어"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/Frg_Connect_Text2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:text="계속"/>
    </LinearLayout>
</RelativeLayout>