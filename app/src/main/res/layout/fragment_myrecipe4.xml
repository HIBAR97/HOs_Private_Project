<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Frg_myrecipe4_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레시피 이름 \n 원두 이름 / 브랜드 \n 원두 품종 / 생산지 / 프로세싱 \n 로스팅 정도 / 생산년도"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe4_Spinner1"
        android:layout_below="@+id/Frg_myrecipe4_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe4_TV2"
        android:layout_below="@id/Frg_myrecipe4_Spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용 원두량"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe4_Spinner2"
        android:layout_below="@id/Frg_myrecipe4_TV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe4_TV3"
        android:layout_below="@id/Frg_myrecipe4_Spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="물량"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe4_Spinner3"
        android:layout_below="@id/Frg_myrecipe4_TV3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe4_TV4"
        android:layout_below="@id/Frg_myrecipe4_Spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="블루밍 (뜸) 유무"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe4_Spinner4"
        android:layout_below="@id/Frg_myrecipe4_TV4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe4_TV5"
        android:layout_below="@id/Frg_myrecipe4_Spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추출 횟수 (블루밍 제외)"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe4_Spinner5"
        android:layout_below="@id/Frg_myrecipe4_TV5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Frg_myrecipe4_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Frg_myrecipe4_Spinner5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Frg_myrecipe4_Prev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="Prev" />


        <Button
            android:id="@+id/Frg_myrecipe4_Next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="next" />

    </LinearLayout>

</RelativeLayout>